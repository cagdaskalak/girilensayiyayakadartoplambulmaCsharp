using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;
using System.Threading.Tasks;

namespace ConsoleApp4
{
    class Program
    {
        static void Main(string[] args)
        {
            Console.WriteLine("Bir say覺 gir: ");
            int n = Convert.ToInt32(Console.ReadLine());
            int toplam = 0;

            for (int i = 1; i <= n; i++)
                toplam = toplam + i;
            Console.WriteLine("1\'den {0}\'e kadar olan say覺lar覺n toplam覺 {1}\'dir.", n, toplam);
            Console.ReadKey();


        }
    }
}
